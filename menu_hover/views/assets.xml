<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- LESS ========================================================================== -->
    <template id="menu_frontend_style" name="Theme Shop style"
              inherit_id="website.assets_frontend" active="True" priority="1">
        <xpath expr="." position="inside">
            <link href="/menu_hover/static/less/custom.less" rel="stylesheet"
                  type="text/less"/>
            <link href="/menu_hover/static/less/options/colors/macho_main_colors.less"
                  type="text/less" rel="stylesheet"/>
        </xpath>
    </template>

    <!-- Color Scheme Assets -->

    <template id="colors_menu" name="option_colors_menu"
              inherit_id="website.assets_frontend" active="True" customize_show="True">
        <xpath expr="." position="inside">
            <link href="/menu_hover/static/less/options/colors/colors_macho.less"
                  rel="stylesheet" type="text/less"/>
        </xpath>
    </template>

</odoo>
