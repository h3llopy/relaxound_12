<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wp_odoo_product_template_form_view" model="ir.ui.view">
            <field name="name">product.normal.woo.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button class="oe_highlight" name="sync_product" string="Sync" type="object"/>
                </header>
                <xpath expr="//field[@name='list_price']" position="replace">
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="superseded_t" attrs="{'invisible': [('details_model','!=','product.template.details')]}"/>
                    <field name="regular_price"  attrs="{'invisible': [('details_model','=','nadanew.vehicle.product')]}" widget="monetary"/>
                    <field name="list_price" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}" attrs="{'invisible': [('details_model','=','nadanew.vehicle.product')]}"/>
                    <field name="schedule_sale"/>
                    <field attrs="{'invisible': ['|',('schedule_sale','!=',True),('details_model','=','nadanew.vehicle.product')]}" name="schedule_date_start"/>
                    <field attrs="{'invisible': [('schedule_sale','!=',True)]}" name="schedule_date_end"/>
                </xpath>
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <label for="backend_id"/>
                        <field name="backend_id" required="1" widget="many2many_tags"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='general_information']/group" position="after">
                    <group>
                        <field name="description"/>
                        <field name="short_description"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='type']" position="before">
                    <field attrs="{'invisible':[('details_model','!=','apparel'),('details_model','!=','accessories'),('details_model','!=','labor'),('details_model','!=','other'),('details_model','!=','tires')]}" name="item_number"/>
                </xpath>

                <xpath expr="//field[@name='categ_id']" position="before">
                    <field name="product_status"/>
                    <field name="tax_class"/>
                    <field name="tax_status"/>
                    <separator string="Dimensions"/>
                    <separator/>
                        <field name="dimention_unit" attrs="{'invisible':[('type','=','service')]}"/>
                        <field name="website_size_x" attrs="{'invisible':[('type','=','service')]}"/>
                        <field name="website_size_y" attrs="{'invisible':[('type','=','service')]}"/>
                        <field name="website_size_z" attrs="{'invisible':[('type','=','service')]}"/>
                </xpath>

                <xpath expr="//field[@name='website_size_z']" position="after">
                    <separator string="Deposit"/>
                    <separator/>
                        <field name="enable_deposit"/>
                        <field name="type_of_deposit" attrs="{'invisible':[('enable_deposit','=',False)]}"/>
                        <field name="deposit_amount" attrs="{'invisible':[('enable_deposit','=',False)]}"/>
                </xpath>

                <field name="categ_id" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>

                <xpath expr="//field[@name='list_price']" position="after">
                        <field colspan="2" name="categ_ids" widget="many2many_tags">
                        </field>
                </xpath>

                <group name="email_template_and_project" position="before">
                    <group name="sale_condition" string="Sale Conditions">
                        <label for="warranty" groups="stock.group_production_lot"/>
                        <div groups="stock.group_production_lot">
                            <field name="warranty" class="oe_inline"/> months
                        </div>
                        <label for="sale_delay"/>
                        <div>
                            <field name="sale_delay" attrs="{'readonly':[('sale_ok','=',False)]}" class="oe_inline" style="vertical-align:baseline"/> days
                        </div>
                    </group>
                </group>
                <xpath expr="//field[@name='standard_price']" position="attributes">
                        <attribute name="attrs">{'invisible': [('details_model','=','nadanew.vehicle.product')]}</attribute>
                </xpath>
                <xpath expr="//label[@for='standard_price']" position="attributes">
                        <attribute name="attrs">{'invisible': [('details_model','=','nadanew.vehicle.product')]}</attribute>
                </xpath>
                
            </field>
        </record>

       <record id="product_details_product_product_form_view" model="ir.ui.view">
            <field name="name">product.product.common.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="//field[@name='lst_price']" position="replace">
                                <field name="variant_regular_price" attrs="{'readonly': [('product_variant_count', '&gt;', 1)]}"/>
                                <field name="schedule_sale1"/>
                                <field attrs="{'invisible': [('schedule_sale1','!=',True)]}" name="schedule_date_start1"/>
                                <field attrs="{'invisible': [('schedule_sale1','!=',True)]}" name="schedule_date_end1"/>
                              
                                <field name="lst_price" widget='monetary' options="{'currency_field': 'currency_id', 'field_digits': True}" attrs="{'readonly': [('product_variant_count', '&gt;', 1)]}" string="Variant Sale price"/>
                    </xpath>
                    
                </data>
            </field>
        </record>
        <record id="wp_odoo_product_category_form_view" model="ir.ui.view">
            <field name="name">product.category.woo.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button class="oe_highlight" name="sync_category" string="Sync" type="object"/>
                    </header>
                </xpath>
                <xpath expr="//sheet/div" position="before">
                    <field class="oe_avatar oe_right" name="image" widget="image"/>
                </xpath>
                <xpath expr="//group" position="before">
                    <group>
                        <group col="2" name="backend">
                            <field name="backend_id" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="slug"/>
                        </group>
                    </group>
                    <group>
                        <field name="desc"/>
                    </group>
                </xpath>
            </field>
        </record>
         <record id="wp_odoo_product_cecommerce_ategory_form_view" model="ir.ui.view">
            <field name="name">product.ecommerce.category.woo.form</field>
            <field name="model">product.public.category</field>
            <field name="inherit_id" ref="website_sale.product_public_category_form_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button class="oe_highlight" name="sync_ecommerce_category" string="Sync" type="object"/>
                    </header>
                </xpath>
                <xpath expr="//group" position="after">
                    <group>
                        <group col="2" name="backend">
                            <field name="backend_id" widget="many2many_tags"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="wp_odoo_product_attr_tree_view" model="ir.ui.view">
            <field name="name">product.attribute.woo.tree</field>
            <field name="model">product.attribute</field>
            <field name="inherit_id" ref="product.attribute_tree_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sequence']" position="after">
                    <button class="oe_highlight" name="sync_attribute" string="Sync" type="object"/>
                </xpath>

                <xpath expr="//field[@name='create_variant']" position="replace">
                 <field name="backend_id" widget="many2many_tags"/>
                 <field name="create_variant"/>
                 <field name="visible"/>
               </xpath>
            </field>
        </record>
        <record id="wp_odoo_product_attr_value_tree_view" model="ir.ui.view">
            <field name="name">product.attribute.value.woo.tree</field>
            <field name="model">product.attribute.value</field>
            <field name="inherit_id" ref="product.variants_tree_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sequence']" position="after">
                    <button class="oe_highlight" name="sync_attribute_value" string="Sync" type="object"/>
                </xpath>
            </field>
        </record>
        <record id="view_product_image_kanban" model="ir.ui.view">
            <field name="name">ViewProductImageKanban</field>
            <field name="model">product.image</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image"/>
                    <field name="product_id"/>
                    <field name="sequence"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette oe_semantic_html_override">
                                <a class="fa fa-times pull-right" t-if="!read_only_mode" type="delete"/>
                                <a type="open">
                                    <img class="oe_kanban_image" style="max-width: 90px; max-height: 90px;" t-att-src="kanban_image('product.image', 'image', record.id.value)"/>
                                </a>
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open">
                                            <t t-if="record.name.value">
                                                <field name="name"/>
                                            </t>
                                            <p/>
                                            <t t-if="record.sequence.value">[
                                                
                                                <field name="sequence"/>
                                                ]</t>
                                        </a>
                                    </h4>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_product_image_form" model="ir.ui.view">
            <field name="name">ViewProductImageForm</field>
            <field name="model">product.image</field>
            <field name="arch" type="xml">
                <form string="Product Image" version="7.0">
                    <group>
                        <group>
                            <field colspan="2" name="image" filename="name"/>
                            <field colspan="2" name="product_id"/>
                            <field colspan="2" name="sequence"/>
                            <field colspan="2" name="name" />
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_product_image_tree" model="ir.ui.view">
            <field name="name">ViewProductImageTree</field>
            <field name="model">product.image</field>
            <field name="arch" type="xml">
                <tree string="Product Images">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="image"/>
                </tree>
            </field>
        </record>

        <record id="custom_product_image" model="ir.ui.view">
            <field name="name">CustomProductImage</field>
            <field name="model">product.image</field>
            <field name="inherit_id" ref="website_sale.view_product_image_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet" position="replace">
                        <sheet>
                            <field name="image" widget="image" filename="name" class="oe_avatar"/>
                            <div class="oe_title">
                                <label class="oe_edit_only" for="name" string="Image Name"/>
                                <h1><field name="name" placeholder="Image Name" required="True"/></h1>
                                <field name="product_tmpl_id" invisible="1"/>
                            </div>
                        </sheet>
                    </xpath>
            </field>
        </record> 
        <record id="wp_odoo_product_tree_view" model="ir.ui.view">
            <field name="name">product.template.tree</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                 <field name="categ_id" position="replace">
                    <field name="categ_ids" widget="many2many_tags"/>
                </field>
        </field>
    </record>

    <!-- Hide unnecessary fields of website in product views -->
    <record model="ir.ui.view" id="product_hide_website_view">
        <field name="name">product.website.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='accessory_product_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website_style_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_hide_websitetwo_view">
        <field name="name">product.websitetwo.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale_stock.product_template_form_view_inherit_website_sale_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='inventory_availability']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="product_hide_websitethree_view">
        <field name="name">product.websitethree.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="website_sale_options.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='optional_product_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Hide unnecessary fields of deposit in product views -->
    <record model="ir.ui.view" id="product_hide_deposithscode_view">
        <field name="name">product.deposithscode.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="delivery.product_template_hs_code"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hs_code']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

