<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    	<record model="ir.ui.view" id="wp_crm_lead_view_custom">
            <field name="name">crm.lead.wp.form.custom</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor" />
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='%(crm.crm_lead_lost_action)d']" position="after">
                    <button name="sync_crm_status" string="Sync" type="object" class="oe_highlight"/>
                    <button name="crm_ro_to_lead" string="New Repair Order" type="object" class="oe_highlight"/>
                </xpath>
				<xpath expr="//field[@name='partner_id']" position="before">
                    <field name="location_att"/>
                    <field name="backend_id" options="{'no_create': True}" widget="many2many_tags"/>
                    <field name="form_type"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="wp_crm_lead_view_form">
            <field name="name">crm.lead.wp.custom.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="wp_crm_lead_view_custom"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_name']" position="after">
                    <field name="location"/>
                    <field name="demo_unit"/>
                </xpath>
                <xpath expr="//div[@class='o_address_format']" position="after">
                    <field name="first_name" string="First Name" />
                    <field name="last_name" string="Last Name" />
                    <field name="test_ride_date" string="Test Ride Date" />
                    <field name="test_ride_time" string="Test Ride Time" />
                    <field name="date_of_birth" string="DOB" />
                </xpath>
                <xpath expr="//page[@name='lead']" position="before">
                    <page string="Your Ride">
                        <group>
                            <field name="your_ride"/>
                        </group>
                    </page>
<!--                     <page string="Ride" attrs="{'invisible':[('form_type','!=','quote')]}">
                        <group>
                            <field name="your_ride"/>
                        </group>
                    </page> -->
                </xpath>
                <xpath expr="//page[@name='lead']" position="after">
                    <page string="Payment" attrs="{'invisible':[('form_type','!=','quote')]}">
                        <group>
                            <field name="payment" widget="selection"/>
                        </group>
                    </page>
                    <page string="Trade In" attrs="{'invisible':[('form_type','!=','quote'),('form_type','!=','consignment_form'),('form_type','!=','sell_your_ride')]}">
                        <group>
                            <!-- <field name="test" widget="many2many_tags" string="Make/Model/Year"/> -->
                            <field name="make"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="mileage"/>
                            <field name="condition"/>
                            <field name="attach_img" widget="image" class="oe_avatar"/>
                        </group>
                    </page>
                    <page string="Store" attrs="{'invisible':[('form_type','==','reserve')]}">
                        <group>
                            <field name="store"/>
                            <field name="check_one"/>
                            <field name="u_name" attrs="{'invisible':[('check_one','!=','I certify that I am the registered owner and that there is still a lien on the vehicle. The lien holder is:')]}"/>
                            <field name="ac_no" attrs="{'invisible':[('check_one','!=','I certify that I am the registered owner and that there is still a lien on the vehicle. The lien holder is:')]}"/>
                            <field name="phone_no" attrs="{'invisible':[('check_one','!=','I certify that I am the registered owner and that there is still a lien on the vehicle. The lien holder is:')]}"/>
                            <field name="u_bal" attrs="{'invisible':[('check_one','!=','I certify that I am the registered owner and that there is still a lien on the vehicle. The lien holder is:')]}"/>
                            <field name="date" attrs="{'invisible':[('check_one','!=','I certify that I am the registered owner and that there is still a lien on the vehicle. The lien holder is:')]}"/>
                            <!-- <separator orientation="vertical" /> -->
                        </group>
                        <group string="Purchase Price">
                            <field name="amount"/>
                        </group>
                    </page>
                    <page string="Deposit" attrs="{'invisible':[('form_type','!=','reserve')]}">
                        <group>
                            <field name="credit_card_type"/>
                            <field name="card_number"/>
                            <field name="name_on_card"/>
                            <field name="month"/>
                            <field name="year_deposite"/>
                            <field name="cvv"/>
                        </group>
                    </page>
                    <page string="Test Ride" attrs="{'invisible':[('form_type','!=','test')]}">
                        <group>
                            <field name="valid_driver_license" widget="image" class="oe_avatar"/>
                            <field name="valid_insurance" widget="image" class="oe_avatar"/>
                            <field name="current_motorcycle_own"/>
                        </group>
                        <group>
                            <field name="initial_1"/>
                            <field name="initial_2"/>
                            <field name="initial_3"/>
                            <field name="initial_4"/>
                            <field name="initial_5"/>
                            <field name="initial_6"/>
                            <field name="initial_7"/>
                            <field name="initial_8"/>
                        </group>
                        <group>
                            <field name="signature" widget="url"/>
                            <field name="date_of_sign"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>