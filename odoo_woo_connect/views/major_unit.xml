<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wp_odoo_major_unit_form_view" model="ir.ui.view">
            <field name="name">major_unit.major_unit.woo.form</field>
            <field name="model">major_unit.major_unit</field>
            <field name="inherit_id" ref="major_unit.view_major_unit_form" />
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                   <header position="inside">
                    <button name="sync_major_unit" string="Sync" type="object" class="oe_highlight"/>
                </header>
                </xpath>
                <xpath expr="//field[@name='prod_lot_id']" position="after">
                    <field name="backend_id" widget="many2many_tags" required="1"/>
                </xpath>
                <xpath expr="//field[@name='stock_number']" position="after">
                    <field name="id" invisible="1"/>
                    <div class="oe_title">
                    <field name="mu_name"/> 
                    </div>
                </xpath>
                <xpath expr="//field[@name='product_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='sale_price']" position="replace">
                    <field name="regular_price" string = 'Regular Price' widget='monetary'/>
                    <field name="sales_price" string = 'Sales Price' widget='monetary'/>
                    <field name="minap" string = 'Minimum Advertising Price' widget='monetary'/>
                    <field name="msrp" string="MSRP" widget='monetary'/>
                    <field name='manufacturer_charges' widget='monetary'/>
                    <field name='financing_charges' widget='monetary'/>
                    <field name='setup_charges_total' widget='monetary'/>
                </xpath>
                <xpath expr="//header/button[@name='major_unit_to_quotation']"  position="attributes">
                    <attribute name="attrs">{'invisible': ['|','|',('state', '=', 'sold'),('state', '=', 'customer'),('form','=','customer_owned')]}</attribute>
                </xpath>
                <xpath expr="//field[@name='unit_class']" position="after">
                    <field name="purchased_from" string = 'Purchased from'/>
                </xpath>
                <xpath expr="//page[4]/group/group" position="replace"/>
                <xpath expr="//page[4]" position="after">
                    <page string="Manufacturer" name="manufacturer">
                            <field name="manufacturer_ids">
                                <tree editable="bottom"> 
                                    <field name="product_id"/>
                                    <field name="manufacturer_price" sum="Total"/>
                                </tree>
                            </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='is_punched']" position="replace">
                    <field name="free_flooring_end"/>
                </xpath>
            </field>
        </record>
        <record id="action_customer_owned_major_unit_new" model="ir.actions.act_window">
            <field name="name">Customer Owned Major Units</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">major_unit.major_unit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('form', 'in', ['customer_owned'])]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a new Major Unit.
                </p>
            </field>
        </record>

        <menuitem id="major_unit.customer_owned_major_unit" name="Customer Owned Major Unit" action="action_customer_owned_major_unit_new" parent="sale.menu_major_unit" sequence="6"/>
        <menuitem id="major_unit.major_unit_warehouse" name="Major Unit Warehouse Management" action="stock.action_warehouse_form" parent="sale.menu_sale_config" groups="stock.group_stock_multi_locations" sequence="9"/>
        <menuitem id="major_unit.major_unit_location" name="Major Unit Stock Management" action="stock.action_location_form" parent="sale.menu_sale_config" groups="stock.group_stock_multi_locations" sequence="10"/>
    </data>
</odoo>