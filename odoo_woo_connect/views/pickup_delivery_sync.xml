<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wp_pickup_view" model="ir.ui.view">
            <field name="name">drm.pickup.wp.form</field>
            <field name="model">drm.pickup</field>
            <field name="inherit_id" ref="service.view_pickup_form"/>
            <field eval="20" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button class="oe_highlight" name="sync_pickup" string="Sync" type="object"/>
                    </header>
                </xpath>

                <xpath expr="//field[@name='date_planned_start']" position="after">
                    <field name="backend_id" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>