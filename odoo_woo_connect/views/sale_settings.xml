<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sales_loan_settings" model="ir.ui.view">
        <field name="name">res.config.settings.loan</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//div[@id='sale_ebay']" position="after">
                   <h2>Loan settings</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box" title="Laon rate ">
                            <div class="o_setting_right_pane">
                                <label for="loan_per"/>
                                <div class="text-muted">
                                    Loan Interest rate
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="loan_per" class="o_light_label" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box" >
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="loan_duration"/>
                                <div class="text-muted">
                                    Loan term
                                </div>
                                <div class="mt16">
                                        <field name="loan_duration" class="o_light_label" />
                                    </div>
                                
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</data>
</odoo>
