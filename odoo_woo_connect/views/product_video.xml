<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_video" model="ir.actions.act_window">
        <field name="name">Product Videos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.videos</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Add a new Video.
            </p>
        </field>
    </record>
    
<!--     <menuitem id="product_video_menu" action="action_video" parent="sales_team.menu_sales" sequence="12"/> -->
    <menuitem id="product_video_menu" action="action_video" parent="sale.product_menu_catalog" sequence="7"/>


    <record id="view_video_form" model="ir.ui.view">
        <field name="name">product.video.form</field>
        <field name="model">product.videos</field>
        <field name="arch" type="xml">
            <form string="Product Video">
                <sheet string="Videos">
                    <group>
                        <field name="name"/>
                        <field name="value_ids" string="Make" domain="[('attribute_id.name','=','Make')]"/>
                        <field name="details" widget="selection"/>
                        <field name="video_url_name"/>
                        <field name="video_preview"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>