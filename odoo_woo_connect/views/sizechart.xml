<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wp_odoo_size_chart_form_view" model="ir.ui.view">
            <field name="name">size.chart.woo.form</field>
            <field name="model">all.sizechart</field>
            <field name="inherit_id" ref="odoo_size_chart.size_chart_form" />
            <field eval="10" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header position="inside">
                        <button name="sync_size_chart" string="Sync" type="object" class="oe_highlight"/>
                    </header>
                </xpath>
                
                <xpath expr="//field[@name='link_text']" position="before">
                    <field name="backend_id" widget="many2many_tags" required="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
