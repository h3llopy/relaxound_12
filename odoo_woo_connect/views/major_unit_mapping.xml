<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
		<record id="view_wp_odoo_majorunit_tree" model="ir.ui.view">
			<field name="name">wordpress.odoo.majorunit.tree</field>
			<field name="model">wordpress.odoo.majorunit</field>
			<field name="type">tree</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="majorunit_mapping" >
					<field name="majorunit_id" />
					<field name="backend_id" />
					<field name="woo_id" />
				</tree>
			</field>
		</record>

		<record id="view_wp_odoo_majorunit_form" model="ir.ui.view">
			<field name="name">wordpress.odoo.majorunit.form</field>
			<field name="model">wordpress.odoo.majorunit</field>
			<field name="type">form</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="majorunit_mapping">
					<h1>
						<field name="majorunit_id" />
					</h1>
					<group col="4" >
						<group string="Mapping" name="Mapping">
							<field name="backend_id" />
							<field name="woo_id" />
						</group>
						<group>
						</group>
					</group>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="wp_odoo_majorunit_search">
            <field name="name">wordpress.odoo.majorunit.search</field>
            <field name="model">wordpress.odoo.majorunit</field>
            <field name="arch" type="xml">
                <search>
                    <field name="backend_id"/>
                    <field name="majorunit_id"/>
                    <filter string="majorunit" name="majorunit_id" domain="[]"/>
                    <filter string="Backend" name="backend_id" domain="[]"/>
                    <group expand="0" string="Group By">
                        <filter string="Backend" icon="terp-go-home" domain="[]"  context="{'group_by':'backend_id'}"/>
                    </group>
                </search>
            </field>
        </record>

		<record model="ir.actions.act_window" id="wp_odoo_majorunit_action">
			<field name="name">Majorunit Mapping</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wordpress.odoo.majorunit</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="wp_odoo_majorunit_action_form">
			<field name="act_window_id" ref="wp_odoo_majorunit_action" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_wp_odoo_majorunit_form" />
		</record>

		<record model="ir.actions.act_window.view" id="wp_odoo_majorunit_action_tree">
			<field name="act_window_id" ref="wp_odoo_majorunit_action" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_wp_odoo_majorunit_tree" />
		</record>

		<menuitem  id="wp_odoo_majorunit_id" name="Major Unit Mapping" parent="menu_wp_odoo_mapping_id" action="wp_odoo_majorunit_action"/>

	</data>
</odoo>

