<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="request_quote_button" inherit_id="website_sale.product" name="Quote Button On Product"
              customize_show="True">
        <xpath expr="//div[@id='product_details']" position="after">
            <div id="custom_product_details">
                <form action="/quotation" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="js_product js_main_product">
                        <div style="visibility: hidden; position: absolute;">
                    
                                <input type="hidden" class="product_id" name="product_id"/>
                                <input type="hidden" class="product_template_id" name="product_template_id"/>
                                <t t-if="first_possible_combination" t-call="sale.variants">
                                    <t t-set="ul_class" t-value="'flex-column'" />
                                    <t t-set="parent_combination" t-value="None"/>
                                </t>
                                <!-- <t t-else="">
                                    <ul class="d-none js_add_cart_variants" t-att-data-attribute_exclusions="{'exclusions: []'}"/>
                                </t> -->
                            <!-- </t> -->
                        </div
                        <a id="add_to_quote" class="btn btn-primary btn-lg mt8 js_check_product a-submit1" href="#">Get Quotation</a>
                    </div>
                </form>
            </div>
        </xpath>
    </template>

    <template id="custom_assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/request_quote/static/src/js/crm_sale_quote.js"/>
        </xpath>
    </template>

    <template id="quotation" name="Quotation" customize_show="True">
        <t t-call="website.layout">
            <t t-set="additional_title">Quotation</t>
            <div id="quotations" class="row">
                <div class="col-md-2"/>
                <div class="col-md-8">
                    <h1 class="mb32 text-center">Quotation</h1>
                    <div class="oe_structure">
                        <form action="/website_form/" method="post" data-model_name="crm.lead"
                              data-success_page="/contactus-thank-you"
                              class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data"
                              data-editable-form="false">
                            <div class="form-group form-field o_website_form_required_custom">
                                <label class="col-md-3 col-sm-4 control-label" for="contact_name">Your Name</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="contact_name"
                                           t-att-value="request.params.get('contact_name', '')" required=""/>
                                </div>
                            </div>
                            <div class="form-group form-field">
                                <label class="col-md-3 col-sm-4 control-label" for="phone">Phone Number</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="phone"
                                           t-att-value="request.params.get('phone', '')"/>
                                </div>
                            </div>
                            <div class="form-group form-field o_website_form_required_custom">
                                <label class="col-md-3 col-sm-4 control-label" for="description">Product</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="product_name"
                                           id="product_name" required=""/>
                                </div>
                            </div>
                            <div class="form-group form-field o_website_form_required_custom">
                                <label class="col-md-3 col-sm-4 control-label" for="description">Quantity</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="product_uom_qty"
                                           t-att-value="request.params.get('product_uom_qty', '')" required=""/>
                                </div>
                            </div>
                            <div class="form-group form-field o_website_form_required">
                                <label class="col-md-3 col-sm-4 control-label" for="name">Subject</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="name" required=""
                                           t-att-value="request.params.get('name', '')"/>
                                </div>
                            </div>
                            <div class="form-group form-field o_website_form_required_custom">
                                <label class="col-md-3 col-sm-4 control-label" for="email_from">Email</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="email_from"
                                           required="" t-att-value="request.params.get('email_from', '')"/>
                                </div>
                            </div>
                            <div class="form-group form-field o_website_form_required_custom">
                                <label class="col-md-3 col-sm-4 control-label" for="partner_name">Your Company</label>
                                <div class="col-md-7 col-sm-8">
                                    <input type="text" class="form-control o_website_form_input" name="company_name"
                                           required="" t-att-value="request.params.get('partner_name', '')"/>
                                </div>
                            </div>
                            <div class="form-group form-field o_website_form_required_custom">
                                <label class="col-md-3 col-sm-4 control-label" for="description1">Your Question</label>
                                <div class="col-md-7 col-sm-8">
                                    <textarea class="form-control o_website_form_input" name="question" required=""
                                              t-att-value="request.params.get('description1', '')"/>
                                </div>
                            </div>
                            <div class="form-group form-field o_website_form_required_custom">
                                <div class="col-md-7 col-sm-8">
                                    <input type="hidden" class="form-control o_website_form_input" id="product_id"
                                           name="product_id" t-att-value="request.params.get('product_id', '')"
                                           required=""/>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7 text-center">
                                    <span class="btn btn-primary btn-lg o_website_form_send">Send</span>
                                    <span id="o_website_form_result"/>
                                </div>
                            </div>
                        </form>
                        <div class="oe_structure"/>
                    </div>
                </div>
                <div class="col-md-2"/>
            </div>
        </t>
    </template>

    <template id="contactus-thank-you" name="Contact us">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure"/>
                <div class="container">
                    <h1>Thank You!</h1>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="alert alert-success">
                                Your quote has been sent successfully.
                                <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                            </div>
                            <p>Our team will get back to you shortly.</p>
                            <p class="mt64">If you have an emergency, do not hesitate to contact us by phone:</p>
                            <ul class="list-unstyled">
                                <li>
                                    <i class="fa fa-phone"/>
                                    :
                                    <span t-field="res_company.phone"/>
                                </li>
                                <li>
                                    <i class="fa fa-envelope"/>
                                    :
                                    <span t-field="res_company.email"/>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <t t-call="website.company_description"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <record id="contactus_thanks" model="website.page">
        <field name="name">Thanks (Contact us)</field>
        <field name="type">qweb</field>
        <field name="url">/contactus-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">website_crm.contactus_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks (Contact us)" t-name="website_crm.contactus_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <div class="oe_structure"/>
                        <div class="container">
                            <h1>Thanks!</h1>
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="alert alert-success">
                                        Your message has been sent successfully.
                                        <button type="button" class="close" data-dismiss="alert">&amp;times;</button>
                                    </div>
                                    <p>
                                        We will get back to you shortly.
                                    </p>
                                    <p class="mt64">
                                        If you have an emergency, do not hesitate to contact us by phone:
                                    </p>
                                    <ul class="list-unstyled">
                                        <li>
                                            <i class="fa fa-phone"/>
                                            :
                                            <span t-field="res_company.phone"/>
                                        </li>
                                        <li>
                                            <i class="fa fa-envelope"/>
                                            :
                                            <span t-field="res_company.email"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <t t-call="website.company_description"/>
                                </div>
                            </div>
                        </div>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </field>
    </record>


    <data>
        <record id="crm.model_crm_lead" model="ir.model">
            <field name="website_form_default_field_id" ref="crm.field_crm_lead__description"/>
            <field name="website_form_access">True</field>
            <field name="website_form_label">Create a lead</field>
        </record>

        <function model="ir.model.fields" name="formbuilder_whitelist">
            <value>crm.lead</value>
            <value eval="[
                'contact_name',
                'description',
                'email_from',
                'name',
                'phone',
                'partner_name',
                'product_id',
                'product_uom_qty',
                'product_name',
                'company_name',
                'question',
            ]"/>
        </function>
    
    </data>


</odoo>