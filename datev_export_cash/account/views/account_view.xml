        <!-- Datev Account Bank Statement Search View Inherit -->

        <record id="datev_view_bank_statement_search_inherit" model="ir.ui.view">
            <field name="name">datev_view_bank_statement_search_inherit</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_search" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date']" position="after" >
                    <separator/>
                    <filter name="datev_exported" string="Exported to DATEV" domain="[('exported_to_datev', '=', True)]"/>
                    <filter name="datev_not_exported" string="Not Exported to DATEV" domain="[('exported_to_datev', '=', False)]"/>
                </xpath>
            </field>
        </record>

