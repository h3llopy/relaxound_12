<odoo>
    <data>
        <record id="datev_export_cash_view" model="ir.ui.view">
             <field name="name">Export data to Datev</field>
             <field name="model">datev.export.cash</field>
             <field name="type">form</field>
            <field name="priority" eval="2"/>
             <field name="arch" type="xml">
                 
                <form string="Export" version="7.0">
                    <field name="state" invisible="1" />
                    <header attrs="{'invisible' : [('state', '==', 'get')]}">
                        <button name="do_export_file" string="Export Cash Registers" class="oe_highlight" type="object" />
                    </header>
                    <group string="Save Datev file" attrs="{'invisible' : [('state', '==', 'choose')]}">
                        <field name="filename"/>
                        <newline/>
                        <field name="file" filename="filename"/>
                    </group>
                    <group name="response_message" attrs="{'invisible' : [('state', '==', 'choose')]}">
                        <field name="response_message" nolable="1" />
                    </group>
                    <footer >
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
             </field>
         </record>

        <act_window name="Export to Datev"
            res_model="datev.export.cash"
            src_model="account.bank.statement"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            id="act_datev_export_cash"/>

        <record id="view_datev_export_options_cash" model="ir.ui.view">
             <field name="name">Export data to Datev</field>
             <field name="model">datev.export.options.cash</field>
             <field name="type">form</field>
             <field name="arch" type="xml">
                <form string="Export Cash Registers to Datev file" version="7.0">

                    <button name="do_export_file" string="Export Cash Registers" states="choose" class="oe_highlight" type="object" />

                    <field name="state" invisible="1" />
                    <group>
                        <group attrs="{'invisible' : [('state', '==', 'get')]}">
                            <field name="company_id"/>
                            <field name='date_start'/>
                            <field name='date_stop'/>
                            <field name='journal_id'/>
                        </group>
                        <group string="Result File" attrs="{'invisible' : [('state', '==', 'choose')]}">
                            <field name="datev_filename" />
                            <field name="datev_file" filename="datev_filename" />
                        </group>
                    </group>
                    <group name="response_message" attrs="{'invisible' : [('state', '==', 'choose')]}">
                        <field name="response_message" nolable="1" />
                    </group>
                    <footer>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
             </field>
         </record>

        <record id="action_datev_export_options_cash" model="ir.actions.act_window">
            <field name="name">Export Cash Registers to Datev file</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">datev.export.options.cash</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
            name="Export Cash Registers to Datev File"
            parent="account.menu_finance_entries"
            action="action_datev_export_options_cash"
            id="menu_account_datev_export_options_cash_60"
            sequence="120"
            icon="STOCK_EXECUTE"/>



    </data>
</odoo>
