<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Angebot/Bestellung anpassen -->
        <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">

            <xpath expr="//t[2][@t-set='address']" position="replace">
                <br/> <br/> <br/>
                <div class="col-xs-6" style="margin-left:100px; margin-right:94px;">
                    <t t-if="doc.partner_id.parent_id">
                        <span t-field="doc.partner_id.parent_id.name"/>
                    </t>

                    <t t-if="doc.partner_id.name">
                        <br/>
                        <span t-field="doc.partner_id.name"/>
                    </t>

                    <t t-if="doc.partner_id.street">
                        <br/>
                        <span t-field="doc.partner_id.street"/>
                    </t>
                    <t t-if="doc.partner_id.street2">
                        <br/>
                        <span t-field="doc.partner_id.street2"/>
                    </t>

                    <t t-if="doc.partner_id.zip or doc.partner_id.city">
                        <br/>
                        <span t-field="doc.partner_id.zip"/>&#32;&#32;
                        <span t-field="doc.partner_id.city"/>
                    </t>
                    <t t-if="doc.partner_id.country_id">
                        <br/>
                        <span t-field="doc.partner_id.country_id.name"/>
                    </t>
                </div>

            </xpath>
            <!-- <xpath expr="//div[@class='page']" position="attributes">
                <attribute name="style">margin-right:2.5cm; margin-left:2.5cm</attribute>
            </xpath> -->
            <xpath expr="//h2" position="replace">
            <br/>
            <div class="row" style="margin-left:100px; margin-right:94px;">
                <h2><div class ="col-xs-4">ZWITSCHERBOX &#160;&#160;&#160;&#160;&#160;&#160;&#160;</div></h2>
                <h2><div class ="col-xs-4">
                    <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                        <span t-if="doc.state not in ['draft','sent']">Order </span>
                        <span t-if="doc.state in ['draft','sent']">Quotation </span>
                    </t>
                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <span>Pro-Forma Invoice </span>
                    </t>
                </div></h2>
            </div>
            <div class="row" style="margin-left: 75px; margin-right: 74px;">
                <div class="col-md-11">
                    <div class="col-md-6" style="width:50%; float: left;">
                        <style>
                            #order_data td{
                            padding:3px 10px 3px 0px
                            }
                        </style>
                        <table id="order_data">
                            <t t-if="doc.partner_id.ref">
                                <tr>
                                    <td>CNr:</td>
                                    <td>
                                        <span t-field="doc.partner_id.ref"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="doc.name">
                                <tr>
                                    <td>Order-No:</td>
                                    <td>
                                        <span t-field="doc.name"/>
                                    </td>
                                </tr>
                            </t>
                            <!-- Customized customer reference in quotations by techspawn -->
                            <t t-if="doc.client_order_ref">
                                <tr>
                                    <td>Ihre Referenz:</td>
                                    <td>
                                        <span t-field="doc.client_order_ref"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="doc.order_date">
                                <tr>
                                    <td>Order Date:</td>
                                    <td>
                                        <span t-esc="doc.order_date" t-options='{"widget": "date"}'/>

                                    </td>
                                </tr>
                            </t>
                            <!--Added the order by and ETD field in sale order report-->  
                            <t t-if="doc.validity_date">
                                <tr>
                                    <td>ETD:</td>
                                    <td>
                                        <span t-field="doc.validity_date"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-if="doc.order_by.name">
                                <tr>
                                    <td>Order By:</td>
                                    <td>
                                        <span t-field="doc.order_by.name"/>
                                    </td>
                                </tr>
                            </t>

                        </table>
                    </div>

                    <!-- </div> -->

                    <!-- </xpath> -->
                    <xpath expr="//div/div[@id='informations']" position="replace">
                      <div class="col-md-6" style="width:50%; float: right; text-align: left;">
                            <table id="data" style=" float:right">
                                <t t-if="doc.client_order_ref">
                                    <tr>
                                        <td>Your Reference:</td>
                                        <td>
                                            <span t-field="doc.client_order_ref"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.confirmation_date and doc.state not in ['draft','sent']">
                                    <tr>
                                        <td>Date Ordered:</td>
                                        <td>
                                            <span t-esc="doc.confirmation_date" t-options='{"widget": "date"}'/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.date_order and doc.state in ['draft','sent']">
                                    <tr>
                                        <td>Quotation Date:</td>
                                        <td>
                                            <span t-esc="doc.date_order" t-options='{"widget": "date"}'/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.user_id.name">
                                    <tr>
                                        <td>Salesperson:</td>
                                        <td>
                                            <span t-field="doc.user_id.name"/>

                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.payment_term_id">
                                    <tr>
                                        <td>Payment Terms:</td>
                                        <td>
                                            <span t-field="doc.payment_term_id"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="doc.validity_date and doc.state in ['draft', 'sent']">
                                    <tr>
                                        <td>Expiration Date:</td>
                                        <td>
                                            <span t-field="doc.validity_date"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </xpath>
                </div>
            </div>
            </xpath>
            
            <xpath expr="//div[@class='row mt32 mb32']" position="attributes">
                <attribute name="style">display:none</attribute>
            </xpath>
            <xpath expr="//div[hasclass('page')]/table[1]" position="replace">
                <div class="col-sm-12 col-md-12 table-responsive">
                    <br/>
                    <br/>
                    <t>
                        <t t-if="doc.partner_id.is_retailer">

                            <table class="table table-condensed" style="table-layout: fixed; width: 90%; border: none; margin: 0 auto;" id="items">
                                <style>
                                    #items td{
                                    border:0
                                    }
                                    #items th {
                                    border-top:0
                                    }
                                </style>
                                <thead>
                                    <tr style="border-bottom:red">
                                        <th class="text-center" style="width: 25%">Article</th>
                                        <th class="text-center" style="width: 12%">Colour</th>
                                        <th class="text-center" style="width: 12%">Quantity</th>
                                        <th class="text-center" style="width: 13%">Single Unit</th>
                                        <th class="text-right" style="width: 14%">Unit Price</th>
                                        <th class="text-right" style="width: 14%">Total</th>
                                    </tr>
                                </thead>
                                <t t-set="single_total" t-value="0"/>
                                <tbody class="invoice_tbody" style="border-bottom: 1px solid black; border-top: 1px solid black">
                                    <tr style="padding-left:20px" t-foreach="doc.order_line" t-as="l">
                                        <t t-if="not l.is_delivery"> 
                                            <!-- <td style="width: 10%">
                                            </td> -->
                                            <td class="text-left" style="width: 25%" >
                                                <span t-field="l.product_id.name"/>
                                            </td>
                                            <td class="text-center" style="width: 12%">
                                                <span t-if="l.product_id.product_tmpl_id.color_id"
                                                      t-field="l.product_id.product_tmpl_id.color_id.name"/>
                                            </td>
                                            <td class="text-center" style="width: 12%" >
                                                <span t-field="l.product_uom_qty"/>
                                            </td>
                                            <t t-if="doc.partner_id.is_retailer">
                                                <td class="text-center" style="white-space:nowrap; width: 1%">
                                                    
                                                    
                                                    <span t-esc="l.single_unit"/>
                                                    <t t-set="single_total" t-value="single_total+l.single_unit"/>
                                                
                                                </td>
                                            </t>
                                            <td class="text-right" style="width: 14%">
                                                <span t-field="doc.currency_id.symbol"/>&#32;
                                                <t t-if="doc.partner_id.company_type=='person'">
            					<span t-esc="('{0:,.2f}'.format(float(l.price_total/l.product_uom_qty))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>
                                                <t t-if="doc.partner_id.company_type=='company'">
            					<span t-esc="('{0:,.2f}'.format(float(l.price_reduce))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>
                                            </td>
                                            <td class="text-right" style="width: 14%">
                                                <span t-field="doc.currency_id.symbol"/>&#32;
                                                <t t-if="doc.partner_id.company_type=='person'">
            					<span t-esc="('{0:,.2f}'.format(float(l.price_total))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>
                                                <t t-if="doc.partner_id.company_type=='company'">
            					<span t-esc="('{0:,.2f}'.format(float(l.price_subtotal))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>

                                            </td>
                                            
                                        </t>
                                    </tr>
                                    <t t-if="doc.partner_id.is_retailer">

                                        <tr style="border-bottom: 1px solid black;" >
                                            <th class="text-center"></th>
                                            <th class="text-center">Total</th>
                                            <th class="text-center"><t t-esc="int(sum(line.product_uom_qty for line in doc.order_line))"/></th>
                                            <th class="text-center"><t t-esc="single_total"/></th>
                                            <th class="text-center"></th>
                                            <th class="text-right"></th>
                                            <th class="text-right"></th>

                                        </tr>
                                    </t>
                                </tbody>
                                <t t-set="single_total" t-value="0"/>
                            </table>
                        </t>
                        <t t-if="not(doc.partner_id.is_retailer)">
                            <table class="table table-condensed" style="table-layout: fixed; width: 83%; border: none; margin: 0 auto;" id="items">
                                <style>
                                    #items td{
                                    border:0
                                    }
                                    #items th {
                                    border-top:0
                                    }
                                </style>
                                <thead>
                                    <tr style="border-bottom:red">
                                        <th class="text-center" style="width: 22%">Article</th>
                                        <th class="text-center" style="width: 13%">Colour</th>
                                        <th class="text-center" style="width: 15%">Quantity</th>
                                        <th class="text-right" style="width: 16%">Unit Price</th>
                                        <th class="text-right" style="width: 17%">Total</th>
                                    </tr>
                                </thead>
                                <t t-set="single_total" t-value="0"/>
                                <tbody class="invoice_tbody" style="border-bottom: 1px solid black; border-top: 1px solid black">
                                    <tr style="padding-left:20px" t-foreach="doc.order_line" t-as="l">
                                        <t t-if="not l.is_delivery"> 
                                            <!-- <td style="width: 10%">
                                            </td> -->
                                            <td class="text-left" style="width: 22%" >
                                                <span t-field="l.product_id.name"/>
                                            </td>
                                            <td class="text-center" style="width: 13%">
                                                <span t-if="l.product_id.product_tmpl_id.color_id"
                                                      t-field="l.product_id.product_tmpl_id.color_id.name"/>
                                            </td>
                                            <td class="text-center" style="width: 15%" >
                                                <span t-field="l.product_uom_qty"/>
                                            </td>
                                            <td class="text-right" style="width: 16%">
                                                <span t-field="doc.currency_id.symbol"/>&#32;
                                                <t t-if="doc.partner_id.company_type=='person'">
                                <span t-esc="('{0:,.2f}'.format(float(l.price_total/l.product_uom_qty))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>
                                                <t t-if="doc.partner_id.company_type=='company'">
                                <span t-esc="('{0:,.2f}'.format(float(l.price_reduce))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>
                                            </td>
                                            <td class="text-right" style="width: 17%">
                                                <span t-field="doc.currency_id.symbol"/>&#32;
                                                <t t-if="doc.partner_id.company_type=='person'">
                                <span t-esc="('{0:,.2f}'.format(float(l.price_total))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>
                                                <t t-if="doc.partner_id.company_type=='company'">
                                <span t-esc="('{0:,.2f}'.format(float(l.price_subtotal))).replace(',','x').replace('.',',').replace('x','.')"/>
                                                </t>

                                            </td>
                                            
                                        </t>
                                    </tr>
                                </tbody>
                                <t t-set="single_total" t-value="0"/>
                            </table>
                        </t>
                    </t>
                </div>
            </xpath>
            <xpath expr="//div/div[@id='total']" position="replace">
                <div id="total" class="row" style="margin-left:70px; margin-right:50px; width: 83%;">
                <!-- <div class="row"> -->
                    <div class="col-6">
                        <!-- <div class="text-left" name="total" style="margin-left:94px;"> -->
                            <br/>
                            <table>
                                <tr t-if="doc.carrier_id">
                                    <td class="text-left" style="font-size:15px">
                                        Shipping method:
                                    </td>
                                    <td class="text-left">
                                        <span t-field="doc.carrier_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="font-size:15px">
                                        Payment method:
                                    </td>
                                    <td class="text-left">
                                        <span t-field="doc.payment_method_id.name"/>
                                    </td>
                                </tr>
                                <!-- <tr t-if="doc.payment_term_id">
                                    <td class="text-left" style="font-size:15px">
                                        Payment term:
                                    </td>
                                    <td class="text-left">
                                        <span t-field="doc.payment_term_id"/>
                                    </td>
                                </tr> -->
                                <tr>
                                    <td class="text-left" style="font-size:15px">
                                        Shipping address:
                                    </td>
                                    <td class="text-left" style="font-size:15px">
                                        <t t-if="doc.partner_id.street">
                                            <span t-field="doc.partner_id.street"/>
                                        </t>
                                        <t t-if="doc.partner_id.street2">
                                            <br/>
                                            <span t-field="doc.partner_id.street2"/>
                                        </t>

                                        <t t-if="doc.partner_id.zip or doc.partner_id.city">
                                            <br/>
                                            <span t-field="doc.partner_id.zip"/>&#32;&#32;
                                            <span t-field="doc.partner_id.city"/>
                                        </t>
                                        <t t-if="doc.partner_id.country_id">
                                            <br/>
                                            <span t-field="doc.partner_id.country_id.name"/>
                                        </t>
                                    </td>
                                </tr>
                            </table>
                        <!-- </div> -->
                    </div>
                    <div class="col-6">
                      <!--   <div class="text-right" name="total" style="margin-left:94px;margin-right:94px;">
                            <div class="pull-right"> -->
                                <table class="table table-condensed" id="summary" style="border: none">
                                    <style>
                                        table#summary td {
                                        border:0
                                        }
                                    </style>

                                    <t t-set="delivery_cost" t-value="0"/>

                                    <t t-foreach="doc.order_line" t-as="l">
                                        <t t-if="l.is_delivery">
                                            <t t-set="delivery_cost" t-value="delivery_cost + l.price_subtotal"/>
                                        </t>
                                    </t>
                                    <tr style="border: none">
                                        <td class="col-xs-3 text-right">
                                            <span>Total</span>
                                        </td>
                                        <td class="text-right col-xs-2">
                                            <strong>
                                                <span t-field="doc.currency_id.symbol"/>&#32;
                            <span t-esc="('{0:,.2f}'.format(float(doc.amount_untaxed - delivery_cost))).replace(',','x').replace('.',',').replace('x','.')"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr style="border-bottom: 1px solid black">
                                        <td class='text-right'>
                                            <span>Shipping</span>
                                        </td>
                                        <td class="text-right">
                                            <strong>
                                                <span t-field="doc.currency_id.symbol"/>&#32;
                            <span t-esc="('{0:,.2f}'.format(float(delivery_cost))).replace(',','x').replace('.',',').replace('x','.')"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr style="border: none">
                                        <td class='text-right'>Untaxed Amount</td>
                                        <td class="text-right">
                                            <span t-field="doc.currency_id.symbol"/>&#32;
                            <span t-esc="('{0:,.2f}'.format(float(doc.amount_untaxed))).replace(',','x').replace('.',',').replace('x','.')"/>
                                        </td>
                                    </tr>

                                    <tr style="border-bottom: 1px solid black">
                                        <td class='text-right'>VAT 19%</td>
                                        <td class="text-right">
                                            <span t-field="doc.currency_id.symbol"/>&#32;
                            <span t-esc="('{0:,.2f}'.format(float(doc.amount_tax))).replace(',','x').replace('.',',').replace('x','.')"/>
                                        </td>
                                    </tr>
                                    <tr style="border: none">
                                        <td class='text-right'>
                                            <strong>Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <strong>
                                                <span t-field="doc.currency_id.symbol"/>&#32;
                            <span t-esc="('{0:,.2f}'.format(float(doc.amount_total))).replace(',','x').replace('.',',').replace('x','.')"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </table>
                          <!--   </div>
                        </div> -->
                    </div>
                </div>

            </xpath>

            <xpath expr="//p[@t-if='doc.payment_term_id.note']" position="replace">
                <div class="text-right" t-if="doc.payment_method_id" style="margin-left:85px; margin-right:94px;">
                    <div class="col-auto mw-100 mb-2 pull-right">
                        <div class="text-right">
                            Payment term:
                        </div>
                        <div class="text-right">
                            <b>
                                <span t-field="doc.payment_method_id.name"/>
                            </b>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-left:85px; margin-right:94px;">
                    <br/>
                  <div class="col-xs-12">
                    <span t-field="doc.note"/>
                      <br/>
                  </div>
                        <t t-if="doc.payment_method_id.name!='Rechnung'">
                            <div class="col-xs-12">
                                <span>Enjoy and relax!<br/>We would be happy about photos and stories of the Zwitscherbox.
                                </span>
                                <br/>
                                <span>
                                    <b>
                                        <u>www.zwitscherbox.com</u>
                                    </b>
                                </span>
                            </div>

                        </t>

                </div>
            </xpath>

            <xpath expr="//p[@t-field='doc.note']" position="replace">
            </xpath>
            <xpath expr="//p[@id='fiscal_position_remark']" position="replace">
            </xpath>
        </template>
    </data>
</odoo>
