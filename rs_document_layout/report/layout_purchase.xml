<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Purchase Order -->
        <template id="report_purchase_document" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//t[@t-set='address']" position="replace">
                <br/>
                <br/>
                <div class="row" style="padding-left:20px;">
                    <div style="width:100%;">
                        <div style="width:50%; float: left;">
                            <strong>Shipping address:</strong><br/>
                            <t t-if="o.partner_id.child_ids.street">
                                <span t-field="o.partner_id.child_ids.street"/>
                            </t>

                            <t t-if="o.partner_id.child_ids.street2">
                                <br/>
                                <span t-field="o.partner_id.child_ids.street2"/>
                            </t>

                            <t t-if="o.partner_id.child_ids.zip or o.partner_id.child_ids.city">
                                <br/>
                                <span t-field="o.partner_id.child_ids.zip"/>&#32;&#32;
                                <span t-field="o.partner_id.child_ids.city"/>
                            </t>
                            <t t-if="o.partner_id.child_ids.country_id">
                                <br/>
                                <span t-field="o.partner_id.child_ids.country_id.name"/>
                            </t>
                        </div>
                        <div style="width:50%; float: right; padding-left:20px;" >
                                <div t-field="o.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
                        </div>

                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
