<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Delivery Slip -->
		<template id="report_delivery_document" inherit_id="stock.report_delivery_document">
			<xpath expr="//div[hasclass('page')]" position="attributes">
                <attribute name="style">margin-right:80px; margin-left:3cm</attribute>
            </xpath>
			<xpath expr="//t[@t-call='web.external_layout']" position="replace">
				<div class="page">
					 <div class="col-xs-12 col-md-12" align="center">
		                <div style="font-size:20px" class="center">
		        			<span>Packing List</span>
		                </div>
		                <div t-if="o.partner_id.ref">CNr.<span t-field="o.partner_id.ref"/>
		                </div>
		            </div>
					<div class="col-xs-6">
						<t t-if="o.partner_id.parent_id">
						    <span t-field="o.partner_id.parent_id.name"/>
						</t>

						<t t-if="o.partner_id.name">
						    <br/>
						    <span t-field="o.partner_id.name"/>
						</t>

						<t t-if="o.partner_id.street">
						    <br/>
						    <span t-field="o.partner_id.street"/>
						</t>

						<t t-if="o.partner_id.street2">
						    <br/>
						    <span t-field="o.partner_id.street2"/>
						</t>

						<t t-if="o.partner_id.zip or o.partner_id.city">
						    <br/>
						    <span t-field="o.partner_id.zip"/>&#32;&#32;
						    <span t-field="o.partner_id.city"/>
						</t>
						<t t-if="o.partner_id.country_id">
						    <br/>
						    <span t-field="o.partner_id.country_id.name"/>
						</t>
					</div>
	            </div>
				<br/>
                <br/>
                <br/>
                <br/>
                <h2>ZWITSCHERBOX</h2>
				<div class="row">
                    <div class="table table-sm">
                        <style>
                            #delivery_data td{
                            padding:3px 10px 3px 0px
                            }
                        </style>
                        <table id="delivery_data">
							<tr>
							<t t-if="o.origin">

                                    <td>Order-No.</td>
                                    <td>
                                        <span t-field="o.origin"/>
                                    </td>
                            </t>
							</tr>
                        </table>
                    </div>
                </div>

			<xpath expr="//table[@t-if='o.product_ids']" position="replace">
				<t t-set="count" t-value="0"/>
				<table class="table table-condensed " style="margin-top:20px" t-if="o.product_id" id="items">
					<style>
                        #items td{
                        border:0
                        }
                        #items th {
                        border-top:0
                        }
                    </style>
                    <thead>
                        <tr style="border-bottom: 1px solid black">
                            <th class="text-left" align="left" valign="left" >Article</th>
                            <th class="text-center" align="center" valign="center">Colour</th>
                            <th class="text-right" align="right" valign="right">Quantity</th>
                        </tr>
                    </thead>
					<tbody>
							<tr t-foreach="o.move_line_ids" t-as="move_line">
								<td class="text-left " align="left" width="35%">
									<span t-field="move_line.product_id"/>
                                </td>
                                <td class="text-center" align="center" width="30%">
									<span t-if="move_line.product_id.product_tmpl_id.color_id"
                                          t-field="move_line.product_id.product_tmpl_id.color_id.name"/>
                                </td>
                                <td  class="text-right" align="right" width="30%">
                                    <span t-field="move_line.qty_done"/>
                                </td>
                            </tr>
					</tbody>
				</table>
			</xpath>
				<xpath expr="//table[@t-if='o.move_line_ids']" position="after">
				<t t-if="o._get_invoicing_address()">
					<tr>
					<br/>
						<br/>
						<td>We will send the invoice via Email to : </td>
						<td>
							<span t-esc="o._get_invoicing_address()"/>
						</td>
					</tr>
				</t>
				<t t-if="o.sale_description">
					<tr>
						<span t-field="o.sale_description"/>
					</tr>
				</t>
				</xpath>
			</xpath>
		</template>
	</data>
</odoo>
