<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Delivery Slip -->
		<template id="report_delivery_document" inherit_id="stock.report_delivery_document">
			<xpath expr="//t[@t-set='address']" position="replace">
			</xpath>
			<xpath expr="//t[@t-set='address']" position="replace">
			</xpath>
			<xpath expr="//div[hasclass('page')]" position="replace">
				<br/>
				<br/>
				<div class="row" style="margin-left:1cm;">
                    <div class="col-lg-12" style=" text-align:center">
		                <div style="font-size:20px">
		        			<span>Packing List</span>
		                </div>
		                <div t-if="o.partner_id.ref">CNr.<span t-field="o.partner_id.ref"/>
		                </div>
		            </div>
	            </div>
				<div class="row" style=" margin-left:2cm;">
                    <div style="float:left;">
						<t t-if="o.partner_id.parent_id">
						    <span t-field="o.partner_id.parent_id.name"/>
						</t>

						<t t-if="o.partner_id.name">
						    <br/>
						    <span t-field="o.partner_id.name"/>
						</t>

						<t t-if="o.partner_id.street">
						    <br/>
						    <span t-field="o.partner_id.street"/>
						</t>
						<t t-if="o.partner_id.street2">
						    <br/>
						    <span t-field="o.partner_id.street2"/>
						</t>

						<t t-if="o.partner_id.zip or o.partner_id.city">
						    <br/>
						    <span t-field="o.partner_id.zip"/>  
						    <span t-field="o.partner_id.city"/>
						</t>
						<t t-if="o.partner_id.country_id">
						    <br/>
						    <span t-field="o.partner_id.country_id.name"/>
						</t>
					</div>
				</div>
				
                <br/>
                <h2 style="margin-left:2cm; margin-right:94px;">ZWITSCHERBOX</h2>
				<div class="row">
                    <div class="table table-sm" id="items">
                        <style>
                            #items td{
                            <!--border:0-->
                            }
                            #items th {
                            <!--border-top:0-->
                            }
                        </style>
                        <table id="delivery_data" style="margin-top:10px;margin-left:2.3cm;">
							<tr>
							<t t-if="o.origin">

                                    <td>Order-No.</td>
                                    <td>
                                        <span t-field="o.origin"/>
                                    </td>
                            </t>
							</tr>
                        </table>
                    </div>
                </div>
			<xpath expr="//table[@t-if='o.product_ids']" position="replace">
				<t t-set="count" t-value="0"/>
				<table class="table table-condensed" style="table-layout:fixed; width:80%; margin-left:1.9cm;" id="items">
					<style>
                        #items td{
                        border:0
                        }
                        #items th {
                        border-top:0
                        }
                    </style>
                    <thead>
                        <tr>
                            <th class="text-left" style="border-bottom: 2px solid black;">Article</th>
                            <th class="text-center" style="border-bottom: 2px solid black;">Colour</th>
                            <th class="text-right" style="border-bottom: 2px solid black;">Quantity</th>
                        </tr>
                    </thead>
					<tbody>
							<tr t-foreach="o.move_line_ids" t-as="move_line">
								<td class="text-left " align="left">
									<span t-field="move_line.product_id"/>
                                </td>
                                <td class="text-center" align="center">
									<span t-if="move_line.product_id.product_tmpl_id.color_id" t-field="move_line.product_id.product_tmpl_id.color_id.name"/>
                                </td>
                                <td class="text-right" align="right">
                                    <span t-field="move_line.qty_done"/>
                                </td>
                            </tr>
					</tbody>
				</table>
			</xpath>
				<xpath expr="//table[@t-if='o.move_line_ids']" position="after">
				<t t-if="o._get_invoicing_address()">
					<table style="margin-left:2cm; ">
						<tr>
						<br/>
							<br/>
							<td style="margin-left:2cm">We will send the invoice via Email to : </td>
							<td>
								<span t-esc="o._get_invoicing_address()"/>
							</td>
						</tr>
					</table>
				</t>
				<t t-if="o.sale_description">
					<table style="margin-left:2px; margin-right:94px;">
						<tr>
							<span style="padding-left:30px;" t-field="o.sale_description"/>
						</tr>
					</table>
				</t>
				</xpath>
			</xpath>
		</template>
	</data>
</odoo>
