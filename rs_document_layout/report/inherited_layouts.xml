<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Header -->
        <!--<template id="external_layout_header" inherit_id="report.external_layout_header">-->
        <template id="external_layout_header" inherit_id="web.external_layout_standard">

            <xpath expr="//div[@class='header']" position="replace">
                <div class="header" style="margin-left: 1cm; margin-right: 1cm;">
                        <div class="row" >
                            <div class="col-xs-12 col-md-12" align="center" style="margin-top:10px;"  >
                            <img src="/rs_document_layout/static/src/img/relaxound_header.png" class="center-block"
                                style="max-height:110px" />
                            </div>
                        </div>
                    <br/>
                    <div class="row" style="margin-top:16px">
                        <div class="col-xs-12 " name="company_address"
                             style="color:#084199;font-size:8px;font-weight:100;font-family:Arial;letter-spacing:1px">
                            <br/>
                                <span t-field="company.name"/>
                            <span>&#32;&#183;&#32;</span>
                            <span t-field="company.street"/>
                            <span>&#32;&#183;&#32;</span>
                            <t t-if="company.country_id.code=='DE'">
                                <span>D</span>
                            </t>
                            <t t-if="company.country_id.code!='DE'">
                                <span t-field="company.country_id.code"/>
                            </t>
                            <span>-</span>
                            <span t-field="company.zip"/>
                            <span>&#32;</span>
                            <span t-field="company.city"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
         <!--Footer -->
        <!--<template id="external_layout_footer" inherit_id="account.external_layout_footer">    -->
        <template id="external_layout_footer" inherit_id="web.external_layout_standard">
            <xpath expr="//div[@class='footer o_standard_footer']" position="replace">
                <div class="footer o_standard_footer" style="font-size:9px; margin-left: 0.5cm">
                    <div class="text-center row">
                        <div class="col-xs-8 col-md-8" style="margin-bottom:10px;" >
                            <table style="width:100%">
                                <tr>
                                    <td>
                                        <span t-field="company.name"/>
                                    </td>
                                    <td>HypoVereinsbank</td>
                                    <td>Geschäftsführer:</td>
                                </tr>
                                <tr>
                                    <td>
                                        <span t-field="company.street"/>
                                    </td>
                                    <td>IBAN DE37 1002 0890 0026 6861 30</td>
                                    <td>Dennis N. Clasen, Philipp Störring</td>
                                </tr>
                                <tr>
                                    <td>
                                        <t t-if="company.country_id.code=='DE'">
                                            <span>D</span>
                                        </t>
                                        <t t-if="company.country_id.code!='DE'">
                                            <span t-field="company.country_id.code"/>
                                        </t>
                                        <span>-</span>
                                        <span t-field="company.zip"/>
                                        <span>&#32;</span>
                                        <span t-field="company.city"/>
                                    </td>
                                    <td>BIC HYVEDEMM488</td>
                                    <td>Amtsgericht Charlottenburg</td>
                                </tr>
                                <tr>
                                    <td>Tel.&#32;
                                        <span t-field="company.phone"/>
                                    </td>
                                    <td>Steuernummer: 29/490/30659</td>
                                    <td>Handelsregisternummer:</td>
                                </tr>
                                <tr>
                                    <td>
                                        <span t-field="company.email"/>
                                    </td>
                                    <td>USt-IdNr.: <span t-field="company.vat"/></td>
                                    <td>HRB 181702 B</td>
                                </tr>
                                <tr>
                                    <td colspan="3">www.zwitscherbox.com</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-12 col-md-4" style="margin-bottom:10px;">
                            <img src="/rs_document_layout/static/src/img/wavemedic.png" class="pull-right"
                                 style="max-height:70px;margin-left:20px"/>
                            <img src="/rs_document_layout/static/src/img/hypnosound.png" class="pull-right"
                                 style="max-height:70px;margin-left:20px"/>
                            <img src="/rs_document_layout/static/src/img/zwitscherbox_logo.png" class="pull-right"
                                 style="max-height:70px;max-width:110px"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>

