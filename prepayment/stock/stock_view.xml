<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="prepayment_view_picking_form" model="ir.ui.view">
            <field name="name">view_picking_form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//header/field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_pay,confirmed,partially_available,assigned,done"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="before">
                	<button name="action_to_pay" states="draft" string="Mark as to pay" type="object" class="oe_highlight" groups="base.group_user"/>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="before">
                	<button name="action_payed" states="to_pay" string="Mark as Payed" type="object" class="oe_highlight" groups="base.group_user"/>
                </xpath>
                <!--
                <xpath expr="//button[@name='action_confirm']" position="replace">
                	<button name="action_confirm" states="draft,to_pay" string="Mark as Todo" type="object" class="oe_highlight" groups="base.group_user"/>
                </xpath>
                -->
                <!--
                <xpath expr="//button[@name='do_new_transfer']" position="replace">
                	<button name="do_new_transfer" states="draft,to_pay,partially_available,assigned" string="Validate" groups="stock.group_stock_user" type="object" class="oe_highlight"/>
                </xpath>
                -->
                <xpath expr="//button[@name='action_cancel']" position="replace">
                	<button name="action_cancel" states="assigned,confirmed,partially_available,draft,to_pay,waiting" string="Cancel" groups="base.group_user" type="object"/>
                </xpath>
                <xpath expr="//button[@name='action_assign_owner']" position="replace">
                	<button name="action_assign_owner" string="Assign Owner" type="object" attrs="{'invisible': ['|',('move_line_exist', '=', False),('state', 'not in', ('draft','to_pay','assigned','confirmed'))]}" class="oe_link"/>
                </xpath>
                <xpath expr="//notebook/page" position="attributes">
                	<attribute name="attrs">{'invisible': [('state', 'in', ('draft','to_pay', 'confirmed', 'waiting'))]}</attribute>
                </xpath>                
            </field>
        </record>
    </data>
</odoo>