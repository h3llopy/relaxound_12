<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    	<!-- Connectortab in Template und Produkt einfÃ¼gen -->
    
        <record id="base_connector_product_form_view" model="ir.ui.view">
            <field name="name">base_connector.product_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page" position="after">
                    <page string="Connectors" name="Connectors" attrs="{'invisible':[('product_variant_count','&gt;',1)]}">
                    
                    </page>
                </xpath>
            </field>
        </record>
        <record id="base_connector_product_form_view_p" model="ir.ui.view">
            <field name="name">base_connector.product_form_view_p</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page" position="after">
                    <page string="Connectors" name="Connectors">
                        
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>