<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="sale_import_error_tree_view">
			<field name="name">Import Error</field>
			<field name="model">sale.import.error</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Error">				
					<field name="source"/>
					<field name="ordernumber"/>
					<field name="description"/>
					<field name="done"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="sale_import_error_search_view">
			<field name="name">Import Error</field>
			<field name="model">sale.import.error</field>
			<field name="arch" type="xml">
				<search string="Error">
					<filter string="Not Done" name="not_done" domain="[('done','=',False)]"/>				
					<field name="source"/>
					<field name="ordernumber"/>
					<field name="description"/>
					<field name="done"/>					
				</search>
			</field>
		</record>

		<record model="ir.ui.view" id="sale_import_error_form_view">
			<field name="name">Import Error</field>
			<field name="model">sale.import.error</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Type">
				  <sheet>
				  	<group>
				    	<field name="source"/>
				    	<field name="ordernumber"/>
				    	<field name="description"/>
				    	<field name="done"/>
			    	</group>						
				  </sheet>
				</form>
			</field>
		</record>
		<record model="ir.actions.act_window" id="import_error_action">
			<field name="name">Import Error</field>
			<field name="res_model">sale.import.error</field>
			<field name="view_type">form</field>
			<field name="view_mode">search,tree,form</field>
			<field name="context">{'not_done':1}</field>
			<!--<field name="view_id" ref="sale_import_error_tree_view" />-->
			<field name="search_view_id" ref="sale_import_error_search_view"/>   
		</record>
	
		<menuitem id="base_connector_wo_delivery.import_error_menu" name="Import Errors" parent="sale.menu_sale_report" sequence="2" action="import_error_action"/>

	</data>
</odoo>