    <template id="report_invoice_document_sample">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context({'lang': lang})"/>
                
                <div class="page" style="margin-right:2.5cm; margin-left:2.5cm; font-size: 12px;">
                    <div id="informations" class="row mt32 mb32" style="float: right;">
                        <div class="col-md-12" name="description">
                            <div class="pull-right">
                                <h4 t-if="o.scheme != 'B2B'" class="text-right"><strong>SEPA DIRECT DEBIT MANDATE</strong></h4>
                                <h4 t-if="o.scheme == 'B2B'" class="text-right"><strong>SEPA LASTSCHRIFTMANDAT</strong></h4>
                                <p class="text-right">Gl√§ubiger-Identifikationsnummer: DE88ZZZ00002032863</p>
                            </div>
                        </div>
                        
                    </div>


                    <div class="row" style="margin-left:-30">
                        <div class="col-6">
                            <div class="card">
                                <div class="card-header">Service Provider / Creditor:</div>
                                <div class="card-body">
                                    <strong t-field="o.company_id.partner_id and o.company_id.partner_id.name"/><br/>
                                    <span t-if="o.company_id.partner_id.vat">VAT: <span t-field="o.company_id.partner_id.vat"/></span>
                                    <span t-field="o.company_id.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card" >
                                <div class="card-header">Policyholder Service / Debtor:</div>
                                <div class="card-body">
                                    <strong t-field="o.partner_id and o.partner_id.name"/>
                                    <span t-field="o.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
                                    <span t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></span>
                                </div>
                            </div>
                        </div>
                    </div>
                        
                  

                    <div class="row mt0">
                        <div class="col-xs-12">
                            Bank name: <span t-field="o.partner_bank_id.bank_name"/> <br/><br/>
                            BIC: <span t-field="o.partner_bank_id.bank_bic"/><br/><br/>
                            IBAN: <span t-field="o.partner_bank_id.acc_number"/><br/><br/>
                            Mandatsreferenz: <span t-field="o.partner_id.ref"/><br/><br/>
                        </div>
                    </div>
                    <div class="row mt8">
                        <div class="col-xs-12">
                            I authorize Relaxound GmbH to collect payments from my above account by direct debit. At the same time wise I call my bank to redeem the direct debits drawn by Relaxound GmbH on my account.
                        </div>
                    </div>
                    <br/><br/><br/>

                    <div class="row mt16">
                        <div class="col-xs-12">
                        
                            Date and Location: _______________________, Signature and Company Stamp _______________________
                        </div>
                    </div> 
                <!-- </div> -->
                    <br/>
                    <br/><br/>
                <!-- <div class="page"> -->
                    <div class="row mt32">
                        <div class="col-xs-12">
                            Note: I can refund the amount debited within eight weeks, starting with the debit date desire. Applicable in this regard by the contract with my bank conditions.
                        </div>

                    </div>
                </div>

            </t>  
    </template>    
    <template id="account_banking_mandate">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="account_banking_mandate.report_invoice_document_sample" t-lang="o.partner_id.lang"/>
                    </t>
                </t>
        </template>
    </data>
