<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="overdue_payment.report_customer_overdue_document">
    <t t-call="web.external_layout">
        <div class="page">
            <div class="row">
                <div class="col-xs-5 col-xs-offset-7">
                    <span t-field="o.name"/><br/>
                    <!-- <span t-raw="o._address_display(None, None)[o.id].replace('\n\n', '\n').replace('\n', '&lt;br&gt;')"/> -->
                    <span t-field="o.vat"/>
                </div>
                <p>
                    Document: Customer account statement<br/>
                    Date: <span t-esc="Date"/><br/>
                    <t t-if="o.ref">Customer ref: <span t-field="o.ref"/></t>
                </p>

                <t t-if="o.customer_invoices">
                    <span t-field="res_company.overdue_msg"/>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Reference number</th>
                                <th class="text-center">Date</th>
                                <th class="text-center">Due Date</th>
                                <th class="text-right">Total</th>
                                <th class="text-right">Due</th>
                            </tr>
                        </thead>
                        <tr t-foreach="o.customer_invoices" t-as="invoice">
                            <td>
                                <span t-esc="invoice.number"/>
                            </td>
                            <td>
                                <span t-esc="invoice.date_invoice"/>
                            </td>
                            <td>
                                <span t-esc="invoice.date_due"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="invoice.amount_total_signed"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="invoice.residual_signed"/>
                            </td>
                        </tr>
                    </table>
                </t>
                <p t-if="not o.customer_invoices">
                    <strong>There is nothing due with this customer.</strong>
                </p>
            </div>
        </div>
   </t>
</template>

<template id="report_customer_overdue">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="overdue_payment.report_customer_overdue_document" t-lang="o.lang"/>
        </t>
    </t>
</template>
</odoo>
